                                        <input type="text" id="FirstName_top" placeholder="Joe" name="player_firstName" value="<%= p.player_firstName %> ">
                                        <label for="LastName_top">Last Name</label>
                                        <input type="text" id="LastName_top" placeholder="Doe" name="player_lastName" value="<%= p.player_lastName %> ">
                                        <label for="pseudo_top">Pseudo</label>
                                        <input type="text" id="pseudo_top" placeholder="Phenix" name="player_pseudo" value="<%= p.player_pseudo %>">
                                        <label for="favCar_top">Favorite caractere</label>
                                        <input type="text" id="favCar_top" placeholder="Aatrox" name="player_favCaract" value="<%= p.player_favCaract %>">
                                    </div>
                                    <% }else if(p.player_id==OneTeam.player_mid) {%>

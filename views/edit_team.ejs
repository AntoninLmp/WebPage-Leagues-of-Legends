                                            <input type="text" id="favCar_mid" placeholder="Aatrox" name="player_favCaract" value="<%= p.player_favCaract %>">
                                        </div>
                                        <% }else if(p.player_id==OneTeam.player_adc) {%>
                                            <div>
                                                <h1>Attack Damage Carry</h1>
                                                <label for="FirstName_adc">First Name</label>
                                                <input type="text" id="FirstName_adc" placeholder="Joe" name="player_firstName" value="<%= p.player_firstName %> ">
                                                <label for="LastName_adc">Last Name</label>
                                                <input type="text" id="LastName_adc" placeholder="Doe" name="player_lastName" value="<%= p.player_lastName %> ">

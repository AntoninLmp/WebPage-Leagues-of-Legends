<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="/static/css/team.css">
    <link rel="icon" href="/static/Images/icons/lol-league-of-Legends-logo.png">
    <title>Show team</title>
</head>

<body>
    <%- include('header') %>
        <main>
            <a href="/team/list">
                <button type="button" class="buttonBack gold">Back to Player</button>
            </a>
            <h1 class="gold_2 center text_title">Show Team</h1>
            <table class="table table-striped table-bordered table-hover" id="showTeam">
                <tr>
                    <td>ID</td>
                    <td>
                        <%= OneTeam.team_id %>
                    </td>
                </tr>
                <tr>
                    <td>NAME</td>
                    <td>
                        <%= OneTeam.team_name %>
                    </td>
                </tr>
                <tr>
                    <td>VICTORY</td>
                    <td>
                        <%= OneTeam.team_victory %>
                    </td>
                </tr>
                <tr>
                    <td>DEFEAT</td>
                    <td>
                        <%= OneTeam.team_defeat %>
                    </td>
                </tr>
                <tr>
                    <td>CONTINENT</td>
                    <td>
                        <%= OneTeam.team_continent %>
                    </td>
                </tr>
                <% for(var p of players){%>
                    <% if(OneTeam.player_top==p.player_id){%>
                        <tr>
                            <td>TOP LINER PLAYER</td>
                            <td>
                                <a href="/players/show/<%= p.player_id %> ">
                                    <%= p.player_pseudo %>
                                </a>

                            </td>
                        </tr>
                        <%}else if(OneTeam.player_mid==p.player_id){%>
                            <tr>
                                <td>MID LINER PLAYER</td>
                                <td>
                                    <a href="/players/show/<%= p.player_id %> ">
                                        <%= p.player_pseudo %>
                                    </a>

                                </td>
                            </tr>
                            <%}else if(OneTeam.player_adc==p.player_id){%>
                                <tr>
                                    <td>ADC PLAYER</td>
                                    <td>
                                        <a href="/players/show/<%= p.player_id %> ">
                                            <%= p.player_pseudo %>
                                        </a>

                                    </td>
                                </tr>
                                <%}else if(OneTeam.player_support==p.player_id){%>
                                    <tr>
                                        <td>SUPPORT PLAYER</td>
                                        <td>
                                            <a href="/players/show/<%= p.player_id %> ">
                                                <%= p.player_pseudo %>
                                            </a>

                                        </td>
                                    </tr>
                                    <%}else if(OneTeam.player_jungle==p.player_id){%>
                                        <tr>
                                            <td>JUNGLE PLAYER</td>
                                            <td>
                                                <a href="/players/show/<%= p.player_id %> ">
                                                    <%= p.player_pseudo %>
                                                </a>

                                            </td>
                                        </tr>
                                        <% } %>
                                            <% } %>
            </table>
        </main>

</body>

</html>